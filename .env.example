# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001

# ============================================
# POSTGRESQL DATABASE
# ============================================
DB_HOST=dpg-xxxxx.frankfurt-postgres.render.com
DB_PORT=5432
DB_NAME=voiceagent_db
DB_USER=voiceagent_superuser
DB_PASSWORD=your_postgres_password_here

# ============================================
# JWT SECRET
# ============================================
# Generate a strong random secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# ANTHROPIC API
# ============================================
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here

# ============================================
# GOOGLE APIs (for Learning Materials)
# ============================================
# Get from: https://console.cloud.google.com/

# Google API Key (for Drive and YouTube)
GOOGLE_API_KEY=AIzaSy...your-google-api-key

# Optional: Google Service Account JSON path (for private Drive access)
# GOOGLE_SERVICE_ACCOUNT_PATH=./service-account.json

# ============================================
# LEARNING FEATURES
# ============================================
# Enable/disable specific features
ENABLE_GOOGLE_DRIVE=true
ENABLE_YOUTUBE=true
ENABLE_PRONUNCIATION_CORRECTION=true

# Default student level
DEFAULT_STUDENT_LEVEL=A1
